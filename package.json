{
  "private": true,
  "name": "peach-social",
  "description": "a Scuttlebutt social networking app",
  "version": "0.0.0",
  "author": "Mikey Williams",
  "repository": "https://github.com/ahdinosaur/peach-social",
  "license": "MPL-2.0",
  "main": "app/background.js",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "lint": "eslint --cache .",
    "format:prettier": "prettier --write .",
    "format:eslint": "eslint --fix .",
    "format": "yarn format:prettier && yarn format:eslint",
    "prepare:electron": "electron-builder install-app-deps",
    "prepare:husky": "husky install",
    "prepare": "yarn prepare:electron && yarn prepare:husky"
  },
  "dependencies": {
    "@apollo/client": "^3.3.19",
    "@babel/preset-typescript": "^7.13.0",
    "apollo-server": "^2.25.0",
    "chloride": "^2.4.1",
    "graphql": "^15.5.0",
    "graphql-transport-electron": "^2.0.2",
    "pull-stream": "^3.6.14",
    "secret-stack": "^6.4.0",
    "source-map-support": "^0.5.16",
    "ssb-blobs": "^2.0.1",
    "ssb-caps": "^1.1.0",
    "ssb-config": "^3.4.5",
    "ssb-conn": "^4.0.1",
    "ssb-db2": "^2.1.2",
    "ssb-deweird": "^1.0.0",
    "ssb-friends": "^4.4.5",
    "ssb-keys": "^8.1.0",
    "ssb-lan": "^1.0.0",
    "ssb-master": "^1.0.3",
    "ssb-ref": "^2.14.3",
    "ssb-replicate": "^1.3.3",
    "ssb-serve-blobs": "^2.6.0",
    "ssb-threads": "^8.0.0",
    "ssb-typescript": "^2.5.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.13.13",
    "@types/node": "^14.6.4",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/parser": "^4.26.0",
    "babel-plugin-graphql-tag": "^3.3.0",
    "electron": "8.2.0",
    "electron-builder": "^22.4.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-eslint": "^6.0.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.3.2",
    "webpack": "~4.42.1"
  },
  "resolutions": {
    "**/react": "17.0.2",
    "**/react-dom": "17.0.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "electronWebpack": {
    "main": {
      "webpackConfig": "webpack.main.js"
    },
    "renderer": {
      "webpackConfig": "webpack.renderer.js"
    }
  }
}
